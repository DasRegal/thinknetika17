$('.alert').html("<%=  alert %>");
$('.notice').html("<%=  notice %>");
$('.validation_errors').val('');
<% if @answer.errors.present? %>
  $('.validation_errors').html("<%= @answer.errors.full_messages.join('<br') %>");
<% else %>
  $('.answers_container').append('<%= j render @answer %>');
  $('textarea#answer_body').val('');
  $("#edit_answer_form_"+<%= @answer.id %>).hide();
  $('#new_answer .nested-fields').remove();
<% end %>